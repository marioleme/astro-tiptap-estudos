<aside class="sidebar">
  <div class="sidebar-header">
    <button 
      id="new-note"
      class="new-note-btn"
      title="Nova Nota"
      aria-label="Novo Nota">
      <i data-lucide="file-plus"></i>
      </button
    >
    <button
      id="remove-note"
      class="remove-note-btn"
      title="Deletar"
      aria-label="Deletar Nota">
      <i data-lucide="trash"></i>
      </button
    >
  </div>
  <div id="notes-list" class="notas-list">
    <div class="note-item"></div>
    <div class="note-item"></div>
  </div>
</aside>
<script>
 import {ulid} from "ulid";
import { createIcons, Trash, FilePlus } from "lucide";
import { removeNote } from "../functions/notes";
  createIcons({
    icons: {
      Trash,
      FilePlus,
    },
  })
  document.getElementById("new-note")?.addEventListener("click", () => {
   const noteId = ulid();
   window.location.hash = noteId;
   window.location.reload();
  });
  document.getElementById("remove-note")?.addEventListener("click", () => {
    removeNote();
   
  
  })

</script>

